<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:ExpirieanceCollection x:Key="ExpirieanceCollectionKey" />
        <local:StatusCollection x:Key="StatusCollectionKey"/>
        <local:ConvertIdToVisibilityOfAdd x:Key="ConvertIdToVisibilityOfAddKey"/>
        <local:ConvertIdToVisibilityOfUpdate x:Key="ConvertIdToVisibilityOfUpdateKey"/>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="FontFamily" Value="Franklin Gothic"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontFamily" Value="Franklin Gothic Medium"/>
        </Style>
        
    </Application.Resources>
</Application>
