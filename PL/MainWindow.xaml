<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#F8DCD3" WindowState="Maximized">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/left.png"  Grid.RowSpan="4" Grid.Column="0"/>
        <Image Source="/logo.png"  Grid.Column="1" Grid.Row="1"/>

        <Image Source="/right.png" Grid.Column="2" Grid.RowSpan="4" />


        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Grid.Column="1" Margin="10"  >

            <Button  HorizontalAlignment="Center"  VerticalAlignment="Center"  Width="200" Height="35" Background="White" Grid.Column="1" Grid.Row="2" Margin="20" BorderBrush="Black" Click="AdminMainWindow_Click" >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="7"/>
                    </Style>
                </Button.Resources>
                <TextBlock Text="Admin" TextAlignment="Center" FontSize="20" Width="150" Height="25"/>
            </Button>

                   
            <Button  HorizontalAlignment="Center"  VerticalAlignment="Top"  Width="200" Height="35" Background="White"   Margin="10">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="7"/>
                    </Style>
                </Button.Resources>

                <TextBlock Text="Engineer" TextAlignment="Center" FontSize="20" Width="170" Height="25"/>
            </Button>

            <Button Content="Gantt" Click="Gantt_window"/>
        </StackPanel>
        
    </Grid>
</Window>
