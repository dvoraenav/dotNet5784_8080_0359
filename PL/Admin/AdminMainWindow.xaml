<Window x:Class="PL.Admin.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Admin"
        mc:Ignorable="d"
        Title="AdminMainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Engineers" HorizontalAlignment="Center"  VerticalAlignment="Top"   Margin="10" Click="EngineerList_Click"/>
            <Button Content="Tasks" HorizontalAlignment="Center"  VerticalAlignment="Top"  Margin="10" Click="TaskList_Click"/>
            <Button Content="Data Initialization" Click="Initialization_Click" Width="200" Grid.Row="3" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" />
            <Button Content="Reset Data" Grid.Row="3" Height="35" Width="200" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" Click="Reset_Click"/>
            <Button Content="Start Project" Margin="10" Click="StartProject_Click"/>
            <Button Content="Gantt" Click="Gantt_window" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
